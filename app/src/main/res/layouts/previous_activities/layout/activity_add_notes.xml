<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1fbba6"
    tools:context=".Activities.AddNotesActivity">


    <Button
        android:id="@+id/imageNote"
        android:layout_width="256dp"
        android:layout_height="187dp"

        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"

        android:layout_marginStart="53dp"
        android:background="@drawable/imagenoteicon"
         />

    <Button
        android:id="@+id/voicenote"
        android:layout_width="256dp"
        android:layout_height="187dp"
        android:layout_alignStart="@+id/imageNote"
        android:layout_centerVertical="true"
        android:background="@drawable/voicenotesicon"
         />

    <Button
        android:id="@+id/button"
        android:layout_width="256dp"
        android:layout_height="187dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/imageNote"
        android:background="@drawable/textnoteicon"
         />

</RelativeLayout>